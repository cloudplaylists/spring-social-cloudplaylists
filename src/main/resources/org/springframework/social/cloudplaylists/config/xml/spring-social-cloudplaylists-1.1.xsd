<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:cloudplaylists="http://www.springframework.org/schema/social/cloudplaylists"
	targetNamespace="http://www.springframework.org/schema/social/cloudplaylists">

	<xs:element name="config">
		<xs:complexType>
			<xs:attribute name="app-id" use="required" type="xs:string" />
			<xs:attribute name="app-secret" use="required" type="xs:string" />
			<xs:attribute name="oauth-authorize-url" use="optional" default="http://api.cloudplaylists.com/oauth/authorize" type="xs:string" />
			<xs:attribute name="oauth-token-url" use="optional" default="http://api.cloudplaylists.com/oauth/token" type="xs:string" />
			<xs:attribute name="oauth-api-base-url" use="optional" default="http://api.cloudplaylists.com" type="xs:string" />
		</xs:complexType>
	</xs:element>

</xs:schema>